@page "/"
@using GranDen.Blazor.Bootstrap.SwitchButton
@using Serilog


<fieldset class="border p-3">
    <legend>Bootstrap Switch Button in Razor Page</legend>

    <Switch InitialState="on"
            OnUiLabel="Enabled" OffUiLabel="Disabled"
            StateChanged="@SwitchCompStateChanged">
    </Switch>
</fieldset>

@code {

    private void SwitchCompStateChanged(bool currentState)
    {
        Log.Information("switch is {0}", currentState);
    }

}